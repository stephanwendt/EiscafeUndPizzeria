<div class="shopping-cart">
	  <%= render "shopping_cart" %>
</div>


<% if false %>
<h1>Your Cart</h1>

<%= link_to 'Empty your cart', shopping_cart_clear_path %>

<% total = 0 %>

<ul>
	<% @cart.each do | id, quantity | %>
		<% product = Product.find_by_id(id) %>
		<li>
			<%= link_to product.name, product %>
			<p><%= product.description %></p>
			<p><%= number_to_currency product.price %></p>
			<p>Quantity: <%= quantity %></p>
		</li>
		<% total += quantity * product.price %>
	<% end %>
	<p>Total: <%= number_to_currency total %></p>
</ul>
<% end %>


<% if false %>
<% if customer_signed_in? %>
	<%= link_to "Kostenpflichtig bestellen", shopping_cart_order_path %>
<% else %>
	<%= link_to "Sign In to order", new_customer_session_path %>
	<%= link_to "Sign Up to order", new_customer_registration_path %>
<% end %>
<% end %>

