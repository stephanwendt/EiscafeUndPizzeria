<div class="container">
	<h2>Sign up</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal center", role: "form" }) do |f| %>
		<%= devise_error_messages! %>

		<div class="field form-group">
			<%= f.label :forename, class: 'control-label' %>
			<%= f.text_field :forename, autofocus: true, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :surname, class: 'control-label' %>
			<%= f.text_field :surname, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :street, class: 'control-label' %>
			<%= f.text_field :street, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :city, class: 'control-label' %>
			<%= f.text_field :city, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :state, class: 'control-label' %>
			<%= f.text_field :state, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :zipcode, class: 'control-label' %>
			<%= f.text_field :zipcode, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :country, class: 'control-label' %>
			<%= f.country_select :country, {}, { class: "form-control" } %>
		</div>

		<div class="field form-group">
			<%= f.label :email, class: 'control-label' %>
			<%= f.email_field :email, required: true, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :telephone_number, class: 'control-label' %>
			<%= f.telephone_field :telephone_number, class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :password, class: 'control-label' %>
			<% if @minimum_password_length %>
				<em>(<%= @minimum_password_length %> characters minimum)</em>
			<% end %>
			<%= f.password_field :password, required: true, autocomplete: "off", class: "form-control" %>
		</div>

		<div class="field form-group">
			<%= f.label :password_confirmation, class: 'control-label' %>
			<%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: "form-control" %>
		</div>

		<div class="actions form-group">
			<%= f.submit "Sign up", class: "btn btn-primary" %>
		</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
