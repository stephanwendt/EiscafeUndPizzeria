<h1>Editing Product</h1>

<%= render 'form' %>

<p>
<%= link_to 'Add Picture', pictures_path %>
</p>

<div class="row">
	<% @product.pictures.each do |picture| %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<%= image_tag picture.image_url.to_s %>
				<div class="caption">
					<p><%= picture.image %></p>
				</div>
			</div>
		</div>
	<% end %>
</div>
</p>

<% if session[:newProductImages] then %>
	<table class="table">
		<% session[:newProductImages].each do |id,quantity| %>
			<% picture = Picture.find_by_id(id) %>
			<tr>
				<td><%= picture.image %></td>
				<td><%= image_tag(picture.image_url.to_s, size: "100x100") %></td>
			</tr>
		<% end %>
	</table>
<% end %>

<%= link_to 'Back', products_path %>
