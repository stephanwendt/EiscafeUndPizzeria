<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Available:</strong>
  <%= @product.available %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
<div class="row">
	<% @product.pictures.each do |picture| %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<%= image_tag picture.image_url.to_s %>
				<div class="caption">
					<p><%= picture.image %></p>
				</div>
			</div>
		</div>
	<% end %>
</div>
</p>


<%= link_to "Add to cart", { :controller => "shopping_cart", :action => "add", :id => @product.id}, remote: true, class: "btn btn-primary" %>
<% if admin_signed_in? %>
	<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>
