<h1 class="text-center">Products for Sale</h1>

<div class="container-fluid">
	<div class="row">
		<% @products.each do |product| %>
			<%= render "product_row", product: product %>
		<% end %>
	</div>
	<br>
	<% if admin_signed_in? %>
		<%= link_to 'New Product', new_product_path %>
	<% end %>
</div>
