<% total = 0 %>
<% total_quantity = 0 %>
<% shopping_cart = session[:cart] %>
<% shopping_cart ||= {} %>
<% shopping_cart.each do | id, quantity | %>
	<% product = Product.find_by_id(id) %>
	<% total += quantity * product.price %>
	<% total_quantity += quantity %>
<% end %>
<%= link_to pluralize(total_quantity, "Item") + " in Cart ( #{number_to_currency total} )", shopping_cart_path, class: "btn btn-success" %>
